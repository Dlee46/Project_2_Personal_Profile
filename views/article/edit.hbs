<h1>Update Information</h1>
<ul>

    <form action="/user/{{userId}}/organizer/{{organizerId}}/article/{{articleId}}?_method=PUT" method="POST">

        <label class="editinfo" for="title">Title</label>
        <input name="title" value="{{article.title}}">
        <br>
        <label class="editinfo" for="notes">Notes</label>
        <textarea name="notes" value="{{article.notes}}"></textarea>
        <br>
        <input type="url" name="url" value="{{article.url}}">
        <br>
        <label for="photoUrl">Photo</label>
        <input type="url" name="photoUrl" value="{{article.photoUrl}}">

        <button type="submit">Update</button>
    </form>
</ul>