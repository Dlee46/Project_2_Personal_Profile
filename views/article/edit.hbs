<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s4">
                <a target="_self" href="/user/{{userId}}/organizer">Home</a>
            </li>
            <li class="tab col s4">
                <a target="_self" href="/user/{{userId}}/organizer/{{organizerId}}/article">Article</a>
            </li>
            <li class="tab col s4">
                <a target="_self" href="/">Log Out</a>
            </li>
        </ul>
    </div>
</div>

<h1>Update Information</h1>
<ul>

    <form action="/user/{{userId}}/organizer/{{organizerId}}/article/{{articleId}}?_method=PUT" method="POST">

        <label class="editinfo" for="title">Title</label>
        <input name="title" value="{{article.title}}">
        <br>
        <label class="editinfo" for="notes">Notes</label>
        <textarea name="notes" value="{{article.notes}}"></textarea>
        <br>
        <label for="url">Website</label>
        <input type="url" name="url" value="{{article.url}}">
        <br>
        <label for="photoUrl">Photo</label>
        <input type="url" name="photoUrl" value="{{article.photoUrl}}">

        <button type="submit" class="waves-effect blue accent-1 btn ">
            <i class="material-icons left ">file_upload</i>Update</button>
    </form>
</ul>